<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/loginUsername"
        android:imeOptions="actionNext"
        android:hint="@string/username"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />

    d<EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/loginPassword"
        android:hint="@string/password"
        android:typeface="normal"
        android:imeOptions="actionDone"
        android:layout_below="@+id/loginUsername"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/showPassword"
        android:id="@+id/loginShowPassword"
        android:checked="false"
        android:layout_below="@+id/loginPassword"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/cancel"
        android:id="@+id/loginButtonCancel"
        android:textSize="16sp"
        android:layout_below="@+id/loginShowPassword"
        android:layout_toLeftOf="@+id/logoutButtonLogout"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:textColor="@color/wallet_holo_blue_light"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/login"
        android:id="@+id/logoutButtonLogout"
        android:enabled="false"
        android:textSize="16sp"
        android:layout_below="@+id/loginShowPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#b7b7b7" />

</RelativeLayout>
