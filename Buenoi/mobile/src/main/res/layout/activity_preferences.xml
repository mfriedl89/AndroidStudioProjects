<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="at.snowreporter.buenoi.Preferences.PreferencesActivity"
    android:id="@+id/Preferences">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/push_notification"
        android:id="@+id/textViewPushNotification"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:textColor="#aaaaaa"
        android:textStyle="italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instant_booking_arrived"
        android:textSize="20dp"
        android:id="@+id/checkBox_instant_booking_arrived"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/textViewPushNotification"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offer_adopted"
        android:textSize="20dp"
        android:id="@+id/checkBox_offer_adopted"
        android:checked="false"
        android:layout_below="@+id/checkBox_instant_booking_arrived"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offer_rejected"
        android:textSize="20dp"
        android:id="@+id/checkBox_offer_rejected"
        android:checked="false"
        android:layout_below="@+id/checkBox_offer_adopted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBox_inquiry_arrived"
        android:layout_alignEnd="@+id/checkBox_inquiry_arrived"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inquiry_arrived"
        android:textSize="20dp"
        android:id="@+id/checkBox_inquiry_arrived"
        android:checked="false"
        android:layout_below="@+id/checkBox_offer_rejected"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/old_inbox_messages"
        android:textSize="20dp"
        android:id="@+id/checkBox_old_inbox_messages"
        android:checked="false"
        android:layout_below="@+id/checkBox_inquiry_arrived"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBox_inquiry_arrived"
        android:layout_alignEnd="@+id/checkBox_inquiry_arrived"
        android:layout_marginBottom="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flat_rate_request_arrived"
        android:textSize="20dp"
        android:id="@+id/checkBox_flat_rate_request_arrived"
        android:checked="false"
        android:layout_below="@+id/checkBox_old_inbox_messages"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBox_old_inbox_messages"
        android:layout_alignEnd="@+id/checkBox_old_inbox_messages"
        android:layout_marginBottom="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_form"
        android:textSize="20dp"
        android:id="@+id/checkBox_contact_form"
        android:layout_below="@+id/checkBox_flat_rate_request_arrived"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBox_flat_rate_request_arrived"
        android:layout_alignEnd="@+id/checkBox_flat_rate_request_arrived"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textSize="20dp"
        android:id="@+id/button_save"
        android:onClick="onClickButtonSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
