<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="01.01.2015"
        android:id="@+id/textViewMessageDate"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:id="@+id/textViewMessageType"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textViewMessageDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="12:00"
        android:id="@+id/textViewMessageTime"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_below="@+id/textViewMessageDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:id="@+id/textViewMessageComment"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/textViewMessageType"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textViewMessageTime"
        android:layout_toStartOf="@+id/textViewMessageTime" />
</RelativeLayout>